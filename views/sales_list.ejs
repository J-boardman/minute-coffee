<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include("partials/head.ejs") %>
    <title>Minute Coffee - Drinks</title>
  </head>
  <body>
    <main>
      <%- include("partials/header.ejs") %>
      <section class="sales-section">
        <h2>Upcoming sales this week</h2>
        <% for (let sale of sales) { %>
        <h3><%= sale.day %></h3>
        <% if(sale.sales.length) { %> <% for(let product of sale.sales) { %>
        <details>
          <summary>
            <strong>
              <%= product.percentage_off %> off <%= product.product_name %>
            </strong>
          </summary>
          <p>
            <strong><%= product.sale_price %></strong> 
            (down from <%= product.product_price %>)
          </p>
          <p>
            <strong><%= product.start_time %> - <%= product.end_time %></strong>
          </p>
          <p><%= product.product_description %></p>
        </details>
        <% } %> <% } else { %>
        <p>No sales on this day</p>
        <% } %> <% } %>
      </section>
      <%- include("partials/footer.ejs") %>
    </main>
  </body>
</html>
